<h1><%= title %></h1>
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/account/register" method="POST">
    <fieldset>
        <label for="account_firstname">First Name:</label>
        <input type="text" id="account_firstname" name="account_firstname" required />
        <label for="account_lastname">Last Name:</label>
        <input type="text" id="account_lastname" name="account_lastname" required />
        <label for="account_email">Email Address:</label>
        <input type="email" id="account_email" name="account_email" placeholder="Enter a valid email address"  pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$"/>
        <label for="account_password">Password:</label>
        <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" title="Debe tener al menos 12 caracteres, incluir una mayúscula, un número y un carácter especial.">
        <p>
        Password must be a minimum of 12 characters and include 1 capital letter, 
        1 number, and 1 special character.
        </p>
        <button type="button" id="btnShow">Show Password</button>
        <button type="submit">Register</button>
    </fieldset>
  </form>
  <script src="/js/script.js"></script>