<h1><%= title %></h1>
<%- messages() %>
<form action="/account/login" method="POST">
    <fieldset>
        <label for="account_email">Email Address:</label>
        <input type="text" id="account_email" name="account_email" required  pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$"/>

        <label for="account_password">Password:</label>
        <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"/>

        <p>
        Password must be a minimum of 12 characters and include 1 capital letter, 
        1 number, and 1 special character.
        </p>
        <button type="button" id="btnShow">Show Password</button>
        <button type="submit">Login</button>
    </fieldset>
    <p>No Account? <a href="/account/register">Sign up</a></p>  
  </form>
  <script src="/js/script.js"></script>
