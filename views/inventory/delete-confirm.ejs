<h1><%= title %></h1>
<p>Confirm Deletion - The deletion is permanent</p>
<form action="/inv/delete" method="POST" id="deleteInventoryForm">
    <fieldset>
      <label for="inv_make">Make</label>
      <input type="text" readonly <% if(locals.inv_make) { %>
        value="<%= locals.inv_make %>"
      <% } %>
      />
      <label for="inv_model">Model</label>
      <input type="text" readonly <% if(locals.inv_model) { %>
        value="<%= locals.inv_model %>"
      <% } %>
      />
      <label for="inv_price">Price</label>
      <input type="number" readonly <% if(locals.inv_price) { %>
        value="<%= locals.inv_price %>"
      <% } %> />

      <label for="inv_year">Year</label>
      <input type="number" readonly <% if(locals.inv_year) { %>
        value="<%= locals.inv_year %>"
      <% } %> />

      <input type="hidden" name="inv_id"  <% if(locals.inv_id) { %>
        value="<%= locals.inv_id %>"
      <% } %> />

      <button type="submit">Delete</button>
    </fieldset>
  </form>